.base {
  background: none;
  border: 0;
  padding: 0;
  margin: 0;
  outline: 0;
  width: 40px;
  height: 40px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  opacity: 0.8;
}

.base:hover {
  opacity: 1;
}

.base svg {
  width: 20px;
  height: 20px;
  fill: $colorButton;
}
