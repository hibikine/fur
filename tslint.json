{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": ["tslint-react", "tslint-config-airbnb", "tslint-config-prettier"],
  "rules": {
    "prettier": [
      true,
      {
        "printWidth": 120,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "requirePragma": false
      }
    ],
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-leading-underscore"],
    "import-name": false
  }
}
